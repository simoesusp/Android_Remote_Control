<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

<!--    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:id="@+id/data_value" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/btAuto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/botaoauto"
                android:onClick="onClickAuto"/>

            <Space
                android:layout_width="200dp"
                android:layout_height="55dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bton" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    </LinearLayout>



    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center"
        android:layout_weight="0.11">

        <Button
            android:id="@+id/left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/btleft" />

        <Button
            android:id="@+id/front"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="center"
            android:background="@drawable/btfront"
            android:onClick="onClickFront" />

        <Button
            android:id="@+id/right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/btright" />

        <Button
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="center"
            android:background="@drawable/btback"
            android:onClick="onClickBack" />

        <Button
            android:id="@+id/stop"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/btstop"
            android:onClick="onClickStop" />
    </GridLayout>
</LinearLayout>